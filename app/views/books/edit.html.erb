<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto" >

      <h2>Editing Book</h2>

      <% if @book.errors.any? %>
        <h3>
          <%= @book.errors.count %>error prohibited this obj from being saved:
        </h3>
          <% @book.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
          <% end %>
        </h3>
      <% end %>

      <%= form_with model: @book do |f| %>

        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_field :body, class: 'form-control' %><br />
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", class: 'btn btn-success' %>
        </div>

      <% end %>

        <div>
          <p>
            <%=link_to 'show', book_path %>
            |
            <%=link_to 'Back', '/books' %>
          </p>
        </div>

    </div>
  </div>
</div>
